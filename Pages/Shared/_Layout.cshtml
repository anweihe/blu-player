<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="theme-color" content="#0a0a0b" />
    <title>@ViewData["Title"] - Bluesound</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/now-playing-popup.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BluesoundWeb.styles.css" asp-append-version="true" />
    <style>
        /* Shared Hamburger Menu Styles */
        :root {
            --menu-bg: #111113;
            --menu-border: rgba(255, 255, 255, 0.06);
            --menu-text: #f4f4f5;
            --menu-text-secondary: #a1a1aa;
            --menu-text-muted: #71717a;
            --menu-accent: #22c55e;
            --menu-card: #161618;
            --menu-card-hover: #1c1c1f;
        }

        /* Menu Overlay */
        .menu-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.2s ease, visibility 0.2s ease;
            z-index: 500;
        }

        .menu-overlay.active {
            opacity: 1;
            visibility: visible;
        }

        /* Menu Panel */
        .menu-panel {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            width: 280px;
            max-width: 85vw;
            background: var(--menu-bg);
            border-right: 1px solid var(--menu-border);
            transform: translateX(-100%);
            transition: transform 0.25s ease;
            z-index: 600;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .menu-panel.active {
            transform: translateX(0);
        }

        .menu-header {
            padding: 20px;
            padding-top: calc(20px + env(safe-area-inset-top));
            border-bottom: 1px solid var(--menu-border);
        }

        .menu-profile {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px;
            background: var(--menu-card);
            border-radius: 10px;
            cursor: pointer;
            transition: background 0.15s ease;
        }

        .menu-profile:hover {
            background: var(--menu-card-hover);
        }

        .menu-profile-avatar {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.1rem;
            font-weight: 600;
            color: white;
            background: var(--menu-accent);
            flex-shrink: 0;
        }

        .menu-profile-info {
            flex: 1;
            min-width: 0;
        }

        .menu-profile-name {
            display: block;
            font-size: 0.95rem;
            font-weight: 600;
            color: var(--menu-text);
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .menu-profile-switch {
            display: block;
            font-size: 0.75rem;
            color: var(--menu-text-muted);
            margin-top: 2px;
        }

        .menu-profile-arrow {
            width: 20px;
            height: 20px;
            color: var(--menu-text-muted);
            flex-shrink: 0;
        }

        .menu-items {
            flex: 1;
            padding: 12px;
            overflow-y: auto;
        }

        .menu-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 14px;
            color: var(--menu-text-secondary);
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.15s ease;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .menu-item:hover {
            background: var(--menu-card);
            color: var(--menu-text);
        }

        .menu-item.active {
            background: rgba(34, 197, 94, 0.1);
            color: var(--menu-accent);
        }

        .menu-item svg {
            width: 20px;
            height: 20px;
            flex-shrink: 0;
        }

        .menu-footer {
            padding: 12px;
            border-top: 1px solid var(--menu-border);
        }

        .menu-item-home {
            color: var(--menu-text-muted);
        }

        /* Profile Switcher */
        .profile-switcher-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 700;
            padding: 20px;
            opacity: 0;
            transition: opacity 0.2s ease;
        }

        .profile-switcher-overlay.active {
            display: flex;
            opacity: 1;
        }

        .profile-switcher-modal {
            background: var(--menu-bg);
            border-radius: 14px;
            width: 100%;
            max-width: 400px;
            max-height: 80vh;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
        }

        .profile-switcher-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 16px 20px;
            border-bottom: 1px solid var(--menu-border);
        }

        .profile-switcher-header h3 {
            font-size: 1.1rem;
            font-weight: 600;
            margin: 0;
            color: var(--menu-text);
        }

        .btn-close-modal {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 32px;
            height: 32px;
            background: transparent;
            border: none;
            color: var(--menu-text-muted);
            cursor: pointer;
            border-radius: 6px;
            transition: all 0.15s ease;
        }

        .btn-close-modal:hover {
            background: var(--menu-card);
            color: var(--menu-text);
        }

        .btn-close-modal svg {
            width: 18px;
            height: 18px;
        }

        .profile-switcher-list {
            flex: 1;
            overflow-y: auto;
            padding: 8px;
        }

        .profile-option {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px;
            border-radius: 8px;
            cursor: pointer;
            transition: background 0.15s ease;
            position: relative;
        }

        .profile-option:hover {
            background: var(--menu-card);
        }

        .profile-option.active {
            background: rgba(34, 197, 94, 0.1);
        }

        .profile-option-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            font-weight: 600;
            color: white;
            flex-shrink: 0;
        }

        .profile-option-info {
            flex: 1;
            min-width: 0;
        }

        .profile-option-name {
            display: block;
            font-size: 0.9rem;
            font-weight: 500;
            color: var(--menu-text);
        }

        .profile-option.active .profile-option-name {
            color: var(--menu-accent);
        }

        .profile-option-status {
            display: block;
            font-size: 0.75rem;
            color: var(--menu-text-muted);
            margin-top: 2px;
        }

        .profile-option-check {
            width: 20px;
            height: 20px;
            color: var(--menu-accent);
            flex-shrink: 0;
        }

        .profile-delete-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 28px;
            height: 28px;
            background: transparent;
            border: none;
            color: var(--menu-text-muted);
            cursor: pointer;
            border-radius: 6px;
            opacity: 0;
            transition: all 0.15s ease;
        }

        .profile-option:hover .profile-delete-btn {
            opacity: 1;
        }

        .profile-delete-btn:hover {
            background: rgba(239, 68, 68, 0.1);
            color: #ef4444;
        }

        .profile-delete-btn svg {
            width: 16px;
            height: 16px;
        }

        .btn-add-profile {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            width: calc(100% - 16px);
            margin: 8px;
            padding: 12px;
            background: var(--menu-card);
            border: 1px solid var(--menu-border);
            border-radius: 8px;
            color: var(--menu-text-secondary);
            font-size: 0.85rem;
            cursor: pointer;
            transition: all 0.15s ease;
        }

        .btn-add-profile:hover {
            background: var(--menu-card-hover);
            color: var(--menu-text);
        }

        .btn-add-profile svg {
            width: 18px;
            height: 18px;
        }

        .no-profiles {
            text-align: center;
            padding: 24px;
            color: var(--menu-text-muted);
            font-size: 0.85rem;
        }

        /* Light mode support */
        @@media (prefers-color-scheme: light) {
            :root {
                --menu-bg: #ffffff;
                --menu-border: rgba(0, 0, 0, 0.06);
                --menu-text: #18181b;
                --menu-text-secondary: #52525b;
                --menu-text-muted: #a1a1aa;
                --menu-card: #f4f4f5;
                --menu-card-hover: #e4e4e7;
            }
        }

        /* SPA Navigation Loading State */
        body.spa-navigating main[role="main"] {
            opacity: 0.6;
            pointer-events: none;
            transition: opacity 0.15s ease;
        }
    </style>
</head>
<body>
    <!-- Global Audio Player (persists across page navigation) -->
    <audio id="global-audio-player" preload="auto"></audio>

    <main role="main">
        @RenderBody()
    </main>

    <!-- Global Now Playing Bar -->
    <div id="global-now-playing-bar" class="global-np-bar">
        <div class="global-np-content">
            <div class="global-np-info" onclick="openGlobalNowPlayingPopup()">
                <img id="global-np-cover" class="global-np-cover" src="" alt="Cover" style="display: none;">
                <div class="global-np-cover-placeholder" id="global-np-cover-placeholder">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M9 18V5l12-2v13"/>
                        <circle cx="6" cy="18" r="3"/>
                        <circle cx="18" cy="16" r="3"/>
                    </svg>
                </div>
                <div class="global-np-details">
                    <span id="global-np-title" class="global-np-title">Kein Titel</span>
                    <span id="global-np-artist" class="global-np-artist">-</span>
                </div>
            </div>
            <div class="global-np-controls">
                <button type="button" class="global-np-btn" onclick="globalPlayPrevious()" title="Vorheriger">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M6 6h2v12H6zm3.5 6l8.5 6V6z"/>
                    </svg>
                </button>
                <button type="button" class="global-np-btn global-np-btn-play" onclick="globalTogglePlayPause()" id="global-btn-play-pause">
                    <svg viewBox="0 0 24 24" fill="currentColor" class="global-icon-play">
                        <path d="M8 5v14l11-7z"/>
                    </svg>
                    <svg viewBox="0 0 24 24" fill="currentColor" class="global-icon-pause" style="display: none;">
                        <path d="M6 4h4v16H6zM14 4h4v16h-4z"/>
                    </svg>
                </button>
                <button type="button" class="global-np-btn" onclick="globalPlayNext()" title="Nächster">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M6 18l8.5-6L6 6v12zM16 6v12h2V6h-2z"/>
                    </svg>
                </button>
            </div>
            <div class="global-np-progress">
                <div class="global-progress-bar" id="global-progress-bar">
                    <div class="global-progress-fill" id="global-progress-fill"></div>
                </div>
                <div class="global-progress-time">
                    <span id="global-current-time">0:00</span>
                    <span id="global-total-time">0:00</span>
                </div>
            </div>
            <button type="button" class="global-np-player-btn" onclick="openGlobalPlayerSelector()" title="Player auswählen">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="4" y="4" width="16" height="16" rx="2"/>
                    <circle cx="12" cy="12" r="3"/>
                </svg>
                <span id="global-selected-player-name" class="global-selected-player">Dieses Gerät</span>
            </button>
        </div>
    </div>

    <!-- Global Now Playing Popup -->
    <div id="global-np-popup" class="global-np-popup-overlay">
        <div class="global-np-popup" id="global-np-popup-sheet">
            <!-- Drag Handle for mobile swipe -->
            <div class="global-np-popup-handle" id="global-np-handle"></div>

            <!-- Close Button (desktop only) -->
            <button type="button" class="global-np-popup-close" onclick="closeGlobalNowPlayingPopup()">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 6L6 18M6 6l12 12"/>
                </svg>
            </button>

            <!-- Tab Navigation -->
            <div class="global-np-tabs">
                <button type="button" class="global-np-tab active" data-tab="player" onclick="switchNowPlayingTab('player')">
                    Aktueller Titel
                </button>
                <button type="button" class="global-np-tab" data-tab="queue" onclick="switchNowPlayingTab('queue')">
                    Warteschlange
                </button>
            </div>

            <!-- Tab Content -->
            <div class="global-np-tab-content">
                <!-- Now Playing Panel -->
                <div class="global-np-tab-panel active" id="global-np-panel-player">
                    <div class="global-np-player">
                        <!-- Album Art + Info -->
                        <div class="global-np-header">
                            <div class="global-np-popup-cover">
                                <img id="global-popup-cover" src="" alt="Album Cover">
                                <div class="global-np-popup-cover-placeholder" id="global-popup-cover-placeholder">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                        <path d="M9 18V5l12-2v13"/>
                                        <circle cx="6" cy="18" r="3"/>
                                        <circle cx="18" cy="16" r="3"/>
                                    </svg>
                                </div>
                            </div>
                            <div class="global-np-popup-info">
                                <h2 id="global-popup-title" class="global-np-popup-title">Titel</h2>
                                <p id="global-popup-artist" class="global-np-popup-artist">Interpret</p>
                                <p id="global-popup-album" class="global-np-popup-album">Album</p>
                            </div>
                        </div>

                        <!-- Progress Bar -->
                        <div class="global-np-popup-progress">
                            <div class="global-popup-progress-bar" id="global-popup-progress-bar">
                                <div class="global-popup-progress-fill" id="global-popup-progress-fill"></div>
                            </div>
                            <div class="global-popup-progress-time">
                                <span id="global-popup-current-time">0:00</span>
                                <span id="global-popup-total-time">0:00</span>
                            </div>
                        </div>

                        <!-- Playback Controls -->
                        <div class="global-np-popup-controls">
                            <button type="button" class="global-popup-btn" onclick="globalPlayPrevious()">
                                <svg viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M6 6h2v12H6zm3.5 6l8.5 6V6z"/>
                                </svg>
                            </button>
                            <button type="button" class="global-popup-btn global-popup-btn-play" onclick="globalTogglePlayPause()" id="global-popup-btn-play-pause">
                                <svg viewBox="0 0 24 24" fill="currentColor" class="global-popup-icon-play">
                                    <path d="M8 5v14l11-7z"/>
                                </svg>
                                <svg viewBox="0 0 24 24" fill="currentColor" class="global-popup-icon-pause" style="display: none;">
                                    <path d="M6 4h4v16H6zM14 4h4v16h-4z"/>
                                </svg>
                            </button>
                            <button type="button" class="global-popup-btn" onclick="globalPlayNext()">
                                <svg viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M6 18l8.5-6L6 6v12zM16 6v12h2V6h-2z"/>
                                </svg>
                            </button>
                        </div>

                        <!-- Quality Selector -->
                        <div class="global-np-popup-quality">
                            <label class="global-quality-label">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M12 20v-6M6 20V10M18 20V4"/>
                                </svg>
                                Qualität
                            </label>
                            <div class="global-quality-options" id="global-quality-options">
                                <button type="button" class="global-quality-option" data-format="5" onclick="setGlobalStreamQuality(5)">
                                    <span class="global-quality-name">MP3</span>
                                    <span class="global-quality-detail">320k</span>
                                </button>
                                <button type="button" class="global-quality-option" data-format="6" onclick="setGlobalStreamQuality(6)">
                                    <span class="global-quality-name">CD</span>
                                    <span class="global-quality-detail">16/44</span>
                                </button>
                                <button type="button" class="global-quality-option" data-format="7" onclick="setGlobalStreamQuality(7)">
                                    <span class="global-quality-name">Hi-Res</span>
                                    <span class="global-quality-detail">24/96</span>
                                </button>
                                <button type="button" class="global-quality-option active" data-format="27" onclick="setGlobalStreamQuality(27)">
                                    <span class="global-quality-name">Max</span>
                                    <span class="global-quality-detail">24/192</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Queue Panel -->
                <div class="global-np-tab-panel" id="global-np-panel-queue">
                    <div class="global-np-queue-panel" id="global-queue-section">
                        <div class="global-queue-header">
                            <div class="global-queue-title">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <line x1="8" y1="6" x2="21" y2="6"/>
                                    <line x1="8" y1="12" x2="21" y2="12"/>
                                    <line x1="8" y1="18" x2="21" y2="18"/>
                                    <line x1="3" y1="6" x2="3.01" y2="6"/>
                                    <line x1="3" y1="12" x2="3.01" y2="12"/>
                                    <line x1="3" y1="18" x2="3.01" y2="18"/>
                                </svg>
                                <span>Warteschlange</span>
                            </div>
                            <span class="global-queue-source" id="global-queue-source"></span>
                        </div>
                        <div class="global-queue-list" id="global-queue-list">
                            <!-- Queue tracks will be rendered here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Global Player Selector Popup -->
    <div id="global-player-selector" class="global-player-selector-overlay" style="display: none;">
        <div class="global-player-selector-popup">
            <div class="global-player-selector-header">
                <h3>Player auswählen</h3>
                <button type="button" class="global-player-selector-close" onclick="closeGlobalPlayerSelector()">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 6L6 18M6 6l12 12"/>
                    </svg>
                </button>
            </div>
            <div class="global-player-selector-list" id="global-player-list">
                <!-- Players will be loaded here -->
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/settings-api.js" asp-append-version="true"></script>
    <script src="~/js/user-profiles.js" asp-append-version="true"></script>
    <script src="~/js/hamburger-menu.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/spa-router.js" asp-append-version="true"></script>
    <script src="~/js/queue-api.js" asp-append-version="true"></script>
    <script src="~/js/global-player.js" asp-append-version="true"></script>
    <script src="~/js/now-playing-swipe.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
