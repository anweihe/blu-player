<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="theme-color" content="#0a0a0b" />
    <title>@ViewData["Title"] - Bluesound</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BluesoundWeb.styles.css" asp-append-version="true" />
    <style>
        /* Shared Hamburger Menu Styles */
        :root {
            --menu-bg: #111113;
            --menu-border: rgba(255, 255, 255, 0.06);
            --menu-text: #f4f4f5;
            --menu-text-secondary: #a1a1aa;
            --menu-text-muted: #71717a;
            --menu-accent: #22c55e;
            --menu-card: #161618;
            --menu-card-hover: #1c1c1f;
        }

        /* Menu Overlay */
        .menu-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.2s ease, visibility 0.2s ease;
            z-index: 500;
        }

        .menu-overlay.active {
            opacity: 1;
            visibility: visible;
        }

        /* Menu Panel */
        .menu-panel {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            width: 280px;
            max-width: 85vw;
            background: var(--menu-bg);
            border-right: 1px solid var(--menu-border);
            transform: translateX(-100%);
            transition: transform 0.25s ease;
            z-index: 600;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .menu-panel.active {
            transform: translateX(0);
        }

        .menu-header {
            padding: 20px;
            border-bottom: 1px solid var(--menu-border);
        }

        .menu-profile {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px;
            background: var(--menu-card);
            border-radius: 10px;
            cursor: pointer;
            transition: background 0.15s ease;
        }

        .menu-profile:hover {
            background: var(--menu-card-hover);
        }

        .menu-profile-avatar {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.1rem;
            font-weight: 600;
            color: white;
            background: var(--menu-accent);
            flex-shrink: 0;
        }

        .menu-profile-info {
            flex: 1;
            min-width: 0;
        }

        .menu-profile-name {
            display: block;
            font-size: 0.95rem;
            font-weight: 600;
            color: var(--menu-text);
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .menu-profile-switch {
            display: block;
            font-size: 0.75rem;
            color: var(--menu-text-muted);
            margin-top: 2px;
        }

        .menu-profile-arrow {
            width: 20px;
            height: 20px;
            color: var(--menu-text-muted);
            flex-shrink: 0;
        }

        .menu-items {
            flex: 1;
            padding: 12px;
            overflow-y: auto;
        }

        .menu-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 14px;
            color: var(--menu-text-secondary);
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.15s ease;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .menu-item:hover {
            background: var(--menu-card);
            color: var(--menu-text);
        }

        .menu-item.active {
            background: rgba(34, 197, 94, 0.1);
            color: var(--menu-accent);
        }

        .menu-item svg {
            width: 20px;
            height: 20px;
            flex-shrink: 0;
        }

        .menu-footer {
            padding: 12px;
            border-top: 1px solid var(--menu-border);
        }

        .menu-item-home {
            color: var(--menu-text-muted);
        }

        /* Profile Switcher */
        .profile-switcher-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 700;
            padding: 20px;
            opacity: 0;
            transition: opacity 0.2s ease;
        }

        .profile-switcher-overlay.active {
            display: flex;
            opacity: 1;
        }

        .profile-switcher-modal {
            background: var(--menu-bg);
            border-radius: 14px;
            width: 100%;
            max-width: 400px;
            max-height: 80vh;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
        }

        .profile-switcher-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 16px 20px;
            border-bottom: 1px solid var(--menu-border);
        }

        .profile-switcher-header h3 {
            font-size: 1.1rem;
            font-weight: 600;
            margin: 0;
            color: var(--menu-text);
        }

        .btn-close-modal {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 32px;
            height: 32px;
            background: transparent;
            border: none;
            color: var(--menu-text-muted);
            cursor: pointer;
            border-radius: 6px;
            transition: all 0.15s ease;
        }

        .btn-close-modal:hover {
            background: var(--menu-card);
            color: var(--menu-text);
        }

        .btn-close-modal svg {
            width: 18px;
            height: 18px;
        }

        .profile-switcher-list {
            flex: 1;
            overflow-y: auto;
            padding: 8px;
        }

        .profile-option {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px;
            border-radius: 8px;
            cursor: pointer;
            transition: background 0.15s ease;
            position: relative;
        }

        .profile-option:hover {
            background: var(--menu-card);
        }

        .profile-option.active {
            background: rgba(34, 197, 94, 0.1);
        }

        .profile-option-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            font-weight: 600;
            color: white;
            flex-shrink: 0;
        }

        .profile-option-info {
            flex: 1;
            min-width: 0;
        }

        .profile-option-name {
            display: block;
            font-size: 0.9rem;
            font-weight: 500;
            color: var(--menu-text);
        }

        .profile-option.active .profile-option-name {
            color: var(--menu-accent);
        }

        .profile-option-status {
            display: block;
            font-size: 0.75rem;
            color: var(--menu-text-muted);
            margin-top: 2px;
        }

        .profile-option-check {
            width: 20px;
            height: 20px;
            color: var(--menu-accent);
            flex-shrink: 0;
        }

        .profile-delete-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 28px;
            height: 28px;
            background: transparent;
            border: none;
            color: var(--menu-text-muted);
            cursor: pointer;
            border-radius: 6px;
            opacity: 0;
            transition: all 0.15s ease;
        }

        .profile-option:hover .profile-delete-btn {
            opacity: 1;
        }

        .profile-delete-btn:hover {
            background: rgba(239, 68, 68, 0.1);
            color: #ef4444;
        }

        .profile-delete-btn svg {
            width: 16px;
            height: 16px;
        }

        .btn-add-profile {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            width: calc(100% - 16px);
            margin: 8px;
            padding: 12px;
            background: var(--menu-card);
            border: 1px solid var(--menu-border);
            border-radius: 8px;
            color: var(--menu-text-secondary);
            font-size: 0.85rem;
            cursor: pointer;
            transition: all 0.15s ease;
        }

        .btn-add-profile:hover {
            background: var(--menu-card-hover);
            color: var(--menu-text);
        }

        .btn-add-profile svg {
            width: 18px;
            height: 18px;
        }

        .no-profiles {
            text-align: center;
            padding: 24px;
            color: var(--menu-text-muted);
            font-size: 0.85rem;
        }

        /* Light mode support */
        @@media (prefers-color-scheme: light) {
            :root {
                --menu-bg: #ffffff;
                --menu-border: rgba(0, 0, 0, 0.06);
                --menu-text: #18181b;
                --menu-text-secondary: #52525b;
                --menu-text-muted: #a1a1aa;
                --menu-card: #f4f4f5;
                --menu-card-hover: #e4e4e7;
            }
        }
    </style>
</head>
<body>
    <main role="main">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
