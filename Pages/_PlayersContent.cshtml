<script>
(function() {
    'use strict';

    async function adjustVolume(button, delta) {
        const container = button.closest('.volume-controls');
        const playerIp = container.dataset.playerIp;
        const playerPort = container.dataset.playerPort;
        let currentVolume = parseInt(container.dataset.volume) || 0;

        // Calculate new volume
        let newVolume = Math.max(0, Math.min(100, currentVolume + delta));

        // Optimistic UI update
        container.dataset.volume = newVolume;
        const volumeFill = container.querySelector('.volume-fill');
        if (volumeFill) {
            volumeFill.style.width = newVolume + '%';
        }

        // Disable buttons temporarily
        const buttons = container.querySelectorAll('.btn-volume');
        buttons.forEach(btn => btn.disabled = true);

        try {
            const formData = new FormData();
            formData.append('playerIp', playerIp);
            formData.append('playerPort', playerPort);
            formData.append('volume', newVolume);

            const response = await fetch('/Players?handler=Volume', {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: formData
            });

            if (response.ok) {
                const data = await response.json();
                container.dataset.volume = data.volume;
                if (volumeFill) {
                    volumeFill.style.width = data.volume + '%';
                }
            }
        } catch (error) {
            console.error('Volume adjustment failed:', error);
            container.dataset.volume = currentVolume;
            if (volumeFill) {
                volumeFill.style.width = currentVolume + '%';
            }
        } finally {
            buttons.forEach(btn => btn.disabled = false);
        }
    }

    // Loading overlay functions
    function showLoading() {
        const loadingOverlay = document.getElementById('loading-overlay');
        if (loadingOverlay) {
            loadingOverlay.style.display = 'flex';
            loadingOverlay.offsetHeight;
            loadingOverlay.classList.add('active');
        }
    }

    function hideLoading() {
        const loadingOverlay = document.getElementById('loading-overlay');
        if (loadingOverlay) {
            loadingOverlay.classList.remove('active');
            setTimeout(() => {
                loadingOverlay.style.display = 'none';
            }, 200);
        }
    }

    // Cached player groups for rendering
    let cachedGroups = [];

    // Initialize page
    async function initPlayersPage() {
        // Initialize profile display
        await initializeProfileDisplay();

        // Start discovering players
        discoverPlayers();
    }

    // Initialize when loaded via SPA or directly
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initPlayersPage);
    } else {
        initPlayersPage();
    }

    window.addEventListener('pageshow', function(event) {
        if (event.persisted) {
            hideLoading();
            // Re-discover if returning to page
            discoverPlayers();
        }
    });

    // Discover players via AJAX
    async function discoverPlayers(refresh = false) {
        const skeleton = document.getElementById('loading-skeleton');
        const emptyState = document.getElementById('empty-state');
        const playersContent = document.getElementById('players-content');
        const errorMsg = document.getElementById('error-message');

        if (!skeleton) return; // Page not ready

        // Show skeleton, hide others
        skeleton.style.display = 'block';
        if (emptyState) emptyState.style.display = 'none';
        if (playersContent) playersContent.style.display = 'none';
        if (errorMsg) errorMsg.style.display = 'none';

        try {
            const response = await fetch(`/Players?handler=Discover&refresh=${refresh}`);
            const data = await response.json();

            skeleton.style.display = 'none';

            if (data.success && data.groups && data.groups.length > 0) {
                cachedGroups = data.groups;
                renderPlayerGroups(data.groups);
                if (playersContent) playersContent.style.display = 'block';
            } else if (data.success) {
                if (emptyState) emptyState.style.display = 'block';
            } else {
                showError(data.error || 'Fehler bei der Player-Suche');
                if (emptyState) emptyState.style.display = 'block';
            }
        } catch (error) {
            console.error('Discovery failed:', error);
            skeleton.style.display = 'none';
            showError('Fehler bei der Verbindung zum Server');
            if (emptyState) emptyState.style.display = 'block';
        }
    }

    // Show error message
    function showError(message) {
        const errorMsg = document.getElementById('error-message');
        const errorText = document.getElementById('error-text');
        if (errorMsg && errorText) {
            errorText.textContent = message;
            errorMsg.style.display = 'flex';
            setTimeout(() => {
                errorMsg.style.display = 'none';
            }, 5000);
        }
    }

    // Render player groups
    function renderPlayerGroups(groups) {
        const statsEl = document.getElementById('player-stats');
        const gridEl = document.getElementById('player-grid');

        if (!statsEl || !gridEl) return;

        // Calculate stats
        const totalPlayers = groups.reduce((sum, g) => sum + g.totalMembers, 0);
        const groupedCount = groups.filter(g => g.type !== 'Single').length;

        // Render stats
        let statsHtml = `<span class="stat"><strong>${totalPlayers}</strong> Player</span>`;
        if (groupedCount > 0) {
            statsHtml += `<span class="stat-divider">·</span><span class="stat"><strong>${groupedCount}</strong> Gruppen</span>`;
        }
        statsEl.innerHTML = statsHtml;

        // Render player cards
        gridEl.innerHTML = groups.map(group => renderPlayerCard(group, groups)).join('');
    }

    // Render a single player card
    function renderPlayerCard(group, allGroups) {
        const isGroup = group.type === 'MultiRoom' && group.members && group.members.length > 0;
        const isStereoPair = group.type === 'StereoPair' || (group.master && group.master.isStereoPaired);
        const cardClass = isGroup ? 'card-group' : (isStereoPair ? 'card-stereo' : 'card-single');

        const master = group.master;
        if (!master) return '';

        // Badge HTML
        let badgeClass = isGroup ? 'badge-group' : (isStereoPair ? 'badge-stereo' : 'badge-single');
        let badgeIcon = isGroup
            ? '<rect x="2" y="7" width="6" height="10" rx="1"/><rect x="16" y="7" width="6" height="10" rx="1"/><path d="M8 12h8"/>'
            : (isStereoPair
                ? '<rect x="4" y="6" width="6" height="12" rx="1"/><rect x="14" y="6" width="6" height="12" rx="1"/>'
                : '<rect x="6" y="4" width="12" height="16" rx="2"/><circle cx="12" cy="14" r="3"/><circle cx="12" cy="7" r="1"/>');
        let badgeText = isGroup ? 'Gruppe' : (isStereoPair ? 'Stereo' : 'Einzeln');

        // Header buttons
        let headerButtons = '';
        if (isGroup) {
            const slaveIps = group.members.map(m => m.ipAddress).join(',');
            headerButtons = `
                <form method="post" action="/Players?handler=DissolveGroup" class="dissolve-form">
                    <input type="hidden" name="masterIp" value="${master.ipAddress}" />
                    <input type="hidden" name="masterPort" value="${master.port}" />
                    <input type="hidden" name="slaveIps" value="${slaveIps}" />
                    <input type="hidden" name="__RequestVerificationToken" value="${getAntiForgeryToken()}" />
                    <button type="submit" class="btn-dissolve" title="Gruppe auflösen" onclick="return confirm('Möchten Sie diese Gruppe wirklich auflösen?')">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/>
                        </svg>
                    </button>
                </form>`;
        } else {
            // Join group dropdown
            const otherGroups = allGroups.filter(g => g.id !== group.id && g.master);
            if (otherGroups.length > 0) {
                const dropdownItems = otherGroups.map(target => `
                    <form method="post" action="/Players?handler=AddToGroup">
                        <input type="hidden" name="masterIp" value="${target.master.ipAddress}" />
                        <input type="hidden" name="masterPort" value="${target.master.port}" />
                        <input type="hidden" name="slaveIp" value="${master.ipAddress}" />
                        <input type="hidden" name="__RequestVerificationToken" value="${getAntiForgeryToken()}" />
                        <button type="submit" class="dropdown-item">
                            <span class="dropdown-item-name">${escapeHtml(target.name)}</span>
                            <span class="dropdown-item-type">${target.displayType}</span>
                        </button>
                    </form>
                `).join('');

                headerButtons = `
                    <div class="join-group-dropdown">
                        <button type="button" class="btn-join" title="Zur Gruppe hinzufügen">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="3" width="7" height="7" rx="1"/><rect x="14" y="3" width="7" height="7" rx="1"/>
                                <rect x="3" y="14" width="7" height="7" rx="1"/><path d="M17.5 14v7M14 17.5h7"/>
                            </svg>
                        </button>
                        <div class="join-dropdown-menu">
                            <div class="dropdown-header">Hinzufügen zu:</div>
                            ${dropdownItems}
                        </div>
                    </div>`;
            }
        }

        // Render master player
        const masterHtml = renderPlayerItem(master, isGroup, false, null);

        // Render slave players
        const membersHtml = (group.members || []).map(member =>
            renderPlayerItem(member, isGroup, true, master)
        ).join('');

        return `
            <div class="player-card ${cardClass}"
                 data-player-ip="${master.ipAddress}"
                 data-player-port="${master.port}"
                 data-player-name="${escapeHtml(group.name)}"
                 onclick="selectPlayer(this)">
                <div class="card-header">
                    <div class="card-title-area">
                        <h3 class="card-title">${escapeHtml(group.name)}</h3>
                        <div class="card-badge ${badgeClass}">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">${badgeIcon}</svg>
                            <span>${badgeText}</span>
                        </div>
                    </div>
                    ${headerButtons}
                </div>
                <div class="player-list">
                    ${masterHtml}
                    ${membersHtml}
                </div>
            </div>`;
    }

    // Render a single player item (master or slave)
    function renderPlayerItem(player, isGroup, isSlave, master) {
        const isStereo = player.isStereoPaired;
        const channelLabel = player.channelMode === 'left' ? 'L' : (player.channelMode === 'right' ? 'R' : '');

        let ungroupBtn = '';
        if (isSlave && master) {
            ungroupBtn = `
                <form method="post" action="/Players?handler=Ungroup" class="ungroup-form">
                    <input type="hidden" name="masterIp" value="${master.ipAddress}" />
                    <input type="hidden" name="masterPort" value="${master.port}" />
                    <input type="hidden" name="slaveIp" value="${player.ipAddress}" />
                    <input type="hidden" name="__RequestVerificationToken" value="${getAntiForgeryToken()}" />
                    <button type="submit" class="btn-ungroup" title="Aus Gruppe entfernen" onclick="return confirm('Player aus der Gruppe entfernen?')">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/>
                        </svg>
                    </button>
                </form>`;
        }

        const icon = isStereo
            ? '<rect x="4" y="6" width="6" height="12" rx="1"/><rect x="14" y="6" width="6" height="12" rx="1"/>'
            : '<rect x="6" y="4" width="12" height="16" rx="2"/><circle cx="12" cy="14" r="3"/><circle cx="12" cy="7" r="1"/>';

        const volumeHtml = player.isFixedVolume
            ? `<div class="fixed-volume">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="11" width="5" height="8" rx="1"/><path d="M8 15l4-4v8l-4-4z"/><path d="M16 12a4 4 0 0 1 0 6"/>
                </svg>
                <span>Fixed Volume</span>
               </div>`
            : `<div class="volume-controls" data-player-ip="${player.ipAddress}" data-player-port="${player.port}" data-volume="${player.volume}">
                <button type="button" class="btn-volume btn-volume-down" title="Leiser" onclick="adjustVolume(this, -2)">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="5" y1="12" x2="19" y2="12"/></svg>
                </button>
                <div class="volume-bar"><div class="volume-fill" style="width: ${Math.max(0, Math.min(100, player.volume))}%"></div></div>
                <button type="button" class="btn-volume btn-volume-up" title="Lauter" onclick="adjustVolume(this, 2)">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
                </button>
               </div>`;

        const itemClass = isSlave ? 'player-slave' : 'player-master';
        const stereoClass = isStereo ? (isSlave ? 'player-stereo' : '') : '';

        return `
            <div class="player-item ${itemClass} ${stereoClass}">
                <div class="player-row">
                    ${ungroupBtn}
                    <div class="player-icon ${isStereo && isSlave ? 'icon-stereo' : ''}">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">${icon}</svg>
                    </div>
                    <div class="player-info">
                        <span class="player-name">
                            ${escapeHtml(player.name)}
                            ${isGroup && !isSlave ? '<span class="master-label">Master</span>' : ''}
                            ${isStereo && isSlave ? '<span class="stereo-label">Stereo</span>' : ''}
                        </span>
                        <span class="player-model">
                            ${isStereo && isSlave ? 'Stereo Pair' : `${escapeHtml(player.brand || '')} ${escapeHtml(player.modelName || '')}`}
                            ${channelLabel ? `<span class="channel-indicator">${channelLabel}</span>` : ''}
                        </span>
                    </div>
                </div>
                <div class="player-volume-row">${volumeHtml}</div>
            </div>`;
    }

    // Get anti-forgery token
    function getAntiForgeryToken() {
        return document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
    }

    // Escape HTML
    function escapeHtml(text) {
        if (!text) return '';
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    // Initialize profile display in header
    async function initializeProfileDisplay() {
        if (typeof UserProfileManager !== 'undefined') {
            await UserProfileManager.initialize();
            await updatePlayersProfileDisplay();
        }
    }

    async function updatePlayersProfileDisplay() {
        if (typeof UserProfileManager === 'undefined') return;

        const activeProfile = await UserProfileManager.getActiveProfile();
        if (activeProfile) {
            const initial = UserProfileManager.getProfileInitial(activeProfile.name);
            const color = UserProfileManager.getProfileColor(activeProfile.id);

            const headerInitial = document.getElementById('header-profile-initial');
            if (headerInitial) {
                headerInitial.textContent = initial;
                headerInitial.parentElement.style.background = color;
            }

            const menuAvatar = document.getElementById('menu-profile-avatar');
            const menuName = document.getElementById('menu-profile-name');
            if (menuAvatar) {
                menuAvatar.textContent = initial;
                menuAvatar.style.background = color;
            }
            if (menuName) {
                menuName.textContent = activeProfile.name;
            }
        }
    }

    // Now Playing functionality
    let selectedPlayerIp = null;
    let selectedPlayerPort = null;
    let selectedPlayerName = null;
    let selectedGroupData = null;
    let playbackRefreshInterval = null;

    function selectPlayer(cardElement) {
        if (event.target.closest('button') || event.target.closest('form') || event.target.closest('.join-dropdown-menu')) {
            return;
        }

        const ip = cardElement.dataset.playerIp;
        const port = cardElement.dataset.playerPort;
        const name = cardElement.dataset.playerName;

        if (!ip || !port) return;

        document.querySelectorAll('.player-card').forEach(c => c.classList.remove('selected'));
        cardElement.classList.add('selected');

        selectedPlayerIp = ip;
        selectedPlayerPort = port;
        selectedPlayerName = name;

        // Find and store the group data for this player (for volume panel)
        if (cachedGroups) {
            selectedGroupData = cachedGroups.find(g =>
                g.master && g.master.ipAddress === ip && g.master.port == port
            );

            // Update volume trigger indicator with master volume
            if (selectedGroupData && selectedGroupData.master && !selectedGroupData.master.isFixedVolume) {
                const trigger = document.querySelector('.np-volume-trigger');
                if (trigger) {
                    trigger.style.setProperty('--volume-level', selectedGroupData.master.volume || 0);
                }
            }
        }

        document.getElementById('now-playing').style.display = 'block';
        document.getElementById('np-player-name').textContent = name;

        fetchPlaybackStatus();

        if (playbackRefreshInterval) {
            clearInterval(playbackRefreshInterval);
        }
        playbackRefreshInterval = setInterval(fetchPlaybackStatus, 2000);
    }

    async function fetchPlaybackStatus() {
        if (!selectedPlayerIp || !selectedPlayerPort) return;

        try {
            const response = await fetch(`/Players?handler=PlaybackStatus&playerIp=${selectedPlayerIp}&playerPort=${selectedPlayerPort}`);
            const data = await response.json();

            if (data.success) {
                updateNowPlaying(data);
            }
        } catch (error) {
            console.error('Failed to fetch playback status:', error);
        }
    }

    function updateNowPlaying(data) {
        const npTitle = document.getElementById('np-title');
        const npArtist = document.getElementById('np-artist');
        const npAlbum = document.getElementById('np-album');
        const artworkContainer = document.getElementById('np-artwork');

        if (npTitle) npTitle.textContent = data.title || 'Kein Titel';
        if (npArtist) npArtist.textContent = data.artist || '';
        if (npAlbum) npAlbum.textContent = data.album || '';

        if (artworkContainer) {
            if (data.imageUrl) {
                artworkContainer.innerHTML = `<img src="${data.imageUrl}" alt="Album Art" onerror="this.parentElement.innerHTML='<svg viewBox=\\'0 0 24 24\\' fill=\\'none\\' stroke=\\'currentColor\\' stroke-width=\\'1.5\\'><circle cx=\\'12\\' cy=\\'12\\' r=\\'10\\'/><circle cx=\\'12\\' cy=\\'12\\' r=\\'3\\'/></svg>'">`;
            } else {
                artworkContainer.innerHTML = `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="10"/><circle cx="12" cy="12" r="3"/></svg>`;
            }
        }

        const progressSection = document.getElementById('np-progress');
        const trackButtons = document.querySelectorAll('.np-track-btn');
        const hasTrackInfo = data.totalSeconds && data.totalSeconds > 0;

        if (hasTrackInfo) {
            if (progressSection) progressSection.style.display = 'block';
            trackButtons.forEach(btn => btn.style.display = 'flex');
            const progressFill = document.getElementById('np-progress-fill');
            const currentTime = document.getElementById('np-current-time');
            const totalTime = document.getElementById('np-total-time');
            if (progressFill) progressFill.style.width = `${data.progressPercent || 0}%`;
            if (currentTime) currentTime.textContent = data.formattedPosition || '0:00';
            if (totalTime) totalTime.textContent = data.formattedDuration || '0:00';
        } else {
            if (progressSection) progressSection.style.display = 'none';
            trackButtons.forEach(btn => btn.style.display = 'none');
        }

        const iconPlay = document.getElementById('icon-play');
        const iconPause = document.getElementById('icon-pause');
        if (iconPlay && iconPause) {
            if (data.isPlaying) {
                iconPlay.style.display = 'none';
                iconPause.style.display = 'block';
            } else {
                iconPlay.style.display = 'block';
                iconPause.style.display = 'none';
            }
        }

        const npService = document.getElementById('np-service');
        if (npService) npService.textContent = data.service || '';
    }

    async function controlPlayback(action) {
        if (!selectedPlayerIp || !selectedPlayerPort) return;

        try {
            const formData = new FormData();
            formData.append('playerIp', selectedPlayerIp);
            formData.append('playerPort', selectedPlayerPort);

            const response = await fetch(`/Players?handler=${action}`, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: formData
            });

            if (response.ok) {
                setTimeout(fetchPlaybackStatus, 200);
            }
        } catch (error) {
            console.error(`Playback control failed (${action}):`, error);
        }
    }

    // Setup playback control buttons
    document.getElementById('btn-play-pause')?.addEventListener('click', function() {
        const iconPlay = document.getElementById('icon-play');
        if (iconPlay && iconPlay.style.display !== 'none') {
            controlPlayback('Play');
        } else {
            controlPlayback('Pause');
        }
    });

    document.getElementById('btn-prev')?.addEventListener('click', function() {
        controlPlayback('PreviousTrack');
    });

    document.getElementById('btn-next')?.addEventListener('click', function() {
        controlPlayback('NextTrack');
    });

    // Volume button click handler
    document.getElementById('btn-volume')?.addEventListener('click', function(e) {
        e.stopPropagation();
        if (!selectedPlayerIp || !selectedPlayerPort) return;

        // Initialize volume panel if not already done
        const panel = initVolumePanel();
        panel.toggle(selectedPlayerIp, selectedPlayerPort, selectedGroupData);
    });

    // Expose functions globally for onclick handlers
    window.adjustVolume = adjustVolume;
    window.discoverPlayers = discoverPlayers;
    window.selectPlayer = selectPlayer;
})();
</script>
