<style>
    /* Loading Overlay */
    .loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(10, 10, 11, 0.85);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        display: none;
        align-items: center;
        justify-content: center;
        z-index: 9999;
        opacity: 0;
        transition: opacity 0.2s ease;
    }

    .loading-overlay.active {
        display: flex;
        opacity: 1;
    }

    .loading-spinner {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }

    .spinner-ring {
        position: absolute;
        border-radius: 50%;
        border: 2px solid transparent;
        animation: spin 1.2s linear infinite;
    }

    .spinner-ring:nth-child(1) {
        width: 50px;
        height: 50px;
        border-top-color: #22c55e;
        animation-duration: 1s;
    }

    .spinner-ring:nth-child(2) {
        width: 38px;
        height: 38px;
        border-right-color: #3b82f6;
        animation-duration: 1.5s;
        animation-direction: reverse;
    }

    .spinner-ring:nth-child(3) {
        width: 26px;
        height: 26px;
        border-bottom-color: #f4f4f5;
        animation-duration: 2s;
    }

    .loading-spinner {
        position: relative;
        width: 50px;
        height: 50px;
    }

    .loading-text {
        position: absolute;
        top: 70px;
        font-size: 0.85rem;
        color: var(--text-secondary);
        font-weight: 500;
        letter-spacing: 0.02em;
    }

    /* Skeleton Loading */
    .loading-skeleton {
        padding: 20px 0;
    }

    .skeleton-header {
        margin-bottom: 16px;
    }

    .skeleton-stats {
        width: 140px;
        height: 20px;
        border-radius: 4px;
    }

    .skeleton-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 16px;
        margin-bottom: 24px;
    }

    .skeleton-card {
        background: var(--bg-card);
        border: 1px solid var(--border-subtle);
        border-radius: var(--radius-lg);
        padding: 14px;
        border-left: 3px solid var(--border-subtle);
    }

    .skeleton-card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 16px;
    }

    .skeleton-title {
        width: 120px;
        height: 20px;
        border-radius: 4px;
    }

    .skeleton-badge {
        width: 70px;
        height: 22px;
        border-radius: 20px;
    }

    .skeleton-card-body {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .skeleton-player-row {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .skeleton-icon {
        width: 36px;
        height: 36px;
        border-radius: var(--radius-sm);
        flex-shrink: 0;
    }

    .skeleton-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .skeleton-name {
        width: 100px;
        height: 16px;
        border-radius: 4px;
    }

    .skeleton-model {
        width: 140px;
        height: 12px;
        border-radius: 4px;
    }

    .skeleton-volume {
        width: 100%;
        height: 28px;
        border-radius: 14px;
        margin-left: 46px;
        max-width: 180px;
    }

    .skeleton-pulse {
        background: linear-gradient(90deg, var(--bg-secondary) 0%, var(--bg-card-hover) 50%, var(--bg-secondary) 100%);
        background-size: 200% 100%;
        animation: skeleton-pulse 1.5s ease-in-out infinite;
    }

    @@keyframes skeleton-pulse {
        0% { background-position: 200% 0; }
        100% { background-position: -200% 0; }
    }

    .skeleton-status {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        padding: 20px;
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    .skeleton-spinner {
        width: 20px;
        height: 20px;
        border: 2px solid var(--border-accent);
        border-top-color: var(--accent-group);
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    /* Retry Button */
    .btn-retry {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        margin-top: 20px;
        padding: 12px 20px;
        background: var(--bg-card);
        border: 1px solid var(--border-accent);
        border-radius: var(--radius-md);
        color: var(--text-primary);
        font-size: 0.9rem;
        cursor: pointer;
        transition: all var(--transition);
    }

    .btn-retry:hover {
        background: var(--bg-card-hover);
        border-color: var(--accent-group);
    }

    .btn-retry svg {
        width: 18px;
        height: 18px;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    /* CSS Variables */
    :root {
        --bg-primary: #0a0a0b;
        --bg-secondary: #111113;
        --bg-card: #161618;
        --bg-card-hover: #1c1c1f;
        --border-subtle: rgba(255, 255, 255, 0.06);
        --border-accent: rgba(255, 255, 255, 0.1);
        --text-primary: #f4f4f5;
        --text-secondary: #a1a1aa;
        --text-muted: #71717a;
        --accent-group: #22c55e;
        --accent-stereo: #3b82f6;
        --accent-single: #71717a;
        --danger: #ef4444;
        --danger-hover: #dc2626;
        --radius-sm: 6px;
        --radius-md: 10px;
        --radius-lg: 14px;
        --shadow-card: 0 2px 8px rgba(0, 0, 0, 0.3), 0 1px 2px rgba(0, 0, 0, 0.2);
        --transition: 0.15s ease;
    }

    /* Reset & Base */
    .bluesound-app {
        font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
        background: var(--bg-primary);
        min-height: 100vh;
        color: var(--text-primary);
        -webkit-font-smoothing: antialiased;
    }

    /* Header */
    .app-header {
        background: var(--bg-secondary);
        border-bottom: 1px solid var(--border-subtle);
        position: sticky;
        top: 0;
        z-index: 100;
        padding: 0 max(16px, env(safe-area-inset-left));
        padding-top: env(safe-area-inset-top);
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 14px 0;
        max-width: 1200px;
        margin: 0 auto;
    }

    .header-left {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .hamburger-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        background: transparent;
        border: none;
        color: var(--text-secondary);
        cursor: pointer;
        border-radius: var(--radius-sm);
        transition: all var(--transition);
    }

    .hamburger-btn:hover {
        background: var(--bg-card);
        color: var(--text-primary);
    }

    .hamburger-btn svg {
        width: 22px;
        height: 22px;
    }

    .brand {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .brand-icon {
        width: 28px;
        height: 28px;
        color: var(--text-primary);
    }

    .brand h1 {
        font-size: 1.25rem;
        font-weight: 600;
        letter-spacing: -0.02em;
        margin: 0;
    }

    .btn-refresh {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 8px 14px;
        background: var(--bg-card);
        border: 1px solid var(--border-accent);
        border-radius: var(--radius-md);
        color: var(--text-primary);
        font-size: 0.875rem;
        font-weight: 500;
        cursor: pointer;
        transition: all var(--transition);
    }

    .btn-refresh:hover {
        background: var(--bg-card-hover);
        border-color: rgba(255, 255, 255, 0.15);
    }

    .btn-refresh svg {
        width: 16px;
        height: 16px;
    }

    .header-actions {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    /* Profile Indicator */
    .profile-indicator {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
