                <div class="album-info-header">
                    <h3>Album-Info</h3>
                    <button type="button" class="btn-close-info" onclick="closeAlbumInfo()">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M18 6L6 18M6 6l12 12"/>
                        </svg>
                    </button>
                </div>
                <div id="album-info-content" class="album-info-content">
                    <!-- KI-generierter Text wird hier angezeigt -->
                </div>
            </div>

            <div class="tracks-list" id="tracks-list">
                <!-- Tracks will be loaded here -->
            </div>
        </div>

    </main>

</div>

