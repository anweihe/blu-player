@page
@model IndexModel
@{
    ViewData["Title"] = "Bluesound Player";
}

@Html.AntiForgeryToken()

<!-- Loading Overlay -->
<div id="loading-overlay" class="loading-overlay">
    <div class="loading-spinner">
        <div class="spinner-ring"></div>
        <div class="spinner-ring"></div>
        <div class="spinner-ring"></div>
        <span class="loading-text">Laden...</span>
    </div>
</div>

<div class="bluesound-app">
    <!-- Header -->
    <header class="app-header">
        <div class="header-content">
            <div class="brand">
                <svg class="brand-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <circle cx="12" cy="12" r="3"/>
                    <path d="M12 2v4M12 18v4M2 12h4M18 12h4"/>
                </svg>
                <h1>Bluesound</h1>
            </div>
            <form method="post" asp-page-handler="Refresh">
                <button type="submit" class="btn-refresh">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M23 4v6h-6M1 20v-6h6"/>
                        <path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"/>
                    </svg>
                    <span>Aktualisieren</span>
                </button>
            </form>
        </div>
    </header>

    <!-- Messages -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-error">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <line x1="15" y1="9" x2="9" y2="15"/>
                <line x1="9" y1="9" x2="15" y2="15"/>
            </svg>
            <span>@Model.ErrorMessage</span>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
            <span>@Model.SuccessMessage</span>
        </div>
    }

    <!-- Content -->
    <main class="main-content">
        @if (Model.PlayerGroups.Count == 0)
        {
            <div class="empty-state">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <rect x="4" y="2" width="16" height="20" rx="2"/>
                    <circle cx="12" cy="14" r="4"/>
                    <line x1="12" y1="6" x2="12" y2="6.01"/>
                </svg>
                <h2>Keine Player gefunden</h2>
                <p>Stellen Sie sicher, dass Ihre Bluesound Player eingeschaltet sind und Sie sich im selben Netzwerk befinden.</p>
            </div>
        }
        else
        {
            <div class="player-stats">
                @{
                    var totalPlayers = Model.PlayerGroups.Sum(g => g.TotalMembers);
                    var groupedCount = Model.PlayerGroups.Count(g => g.Type != BluesoundWeb.Models.GroupType.Single);
                }
                <span class="stat">
                    <strong>@totalPlayers</strong> Player
                </span>
                @if (groupedCount > 0)
                {
                    <span class="stat-divider">·</span>
                    <span class="stat">
                        <strong>@groupedCount</strong> Gruppen
                    </span>
                }
            </div>

            <div class="player-grid">
                @foreach (var group in Model.PlayerGroups)
                {
                    var isGroup = group.Type == BluesoundWeb.Models.GroupType.MultiRoom && group.Members.Count > 0;
                    var isStereoPair = group.Type == BluesoundWeb.Models.GroupType.StereoPair ||
                                       (group.Master?.IsStereoPaired == true);
                    var cardClass = isGroup ? "card-group" : (isStereoPair ? "card-stereo" : "card-single");

                    <div class="player-card @cardClass"
                         data-player-ip="@group.Master?.IpAddress"
                         data-player-port="@group.Master?.Port"
                         data-player-name="@group.Name"
                         onclick="selectPlayer(this)">
                        <!-- Card Header -->
                        <div class="card-header">
                            <div class="card-title-area">
                                <h3 class="card-title">@group.Name</h3>
                                <div class="card-badge @(isGroup ? "badge-group" : (isStereoPair ? "badge-stereo" : "badge-single"))">
                                    @if (isGroup)
                                    {
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="2" y="7" width="6" height="10" rx="1"/>
                                            <rect x="16" y="7" width="6" height="10" rx="1"/>
                                            <path d="M8 12h8"/>
                                        </svg>
                                        <span>Gruppe</span>
                                    }
                                    else if (isStereoPair)
                                    {
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="4" y="6" width="6" height="12" rx="1"/>
                                            <rect x="14" y="6" width="6" height="12" rx="1"/>
                                        </svg>
                                        <span>Stereo</span>
                                    }
                                    else
                                    {
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="6" y="4" width="12" height="16" rx="2"/>
                                            <circle cx="12" cy="14" r="3"/>
                                            <circle cx="12" cy="7" r="1"/>
                                        </svg>
                                        <span>Einzeln</span>
                                    }
                                </div>
                            </div>

                            @if (isGroup && group.Master != null)
                            {
                                <form method="post" asp-page-handler="DissolveGroup" class="dissolve-form">
                                    <input type="hidden" name="masterIp" value="@group.Master.IpAddress" />
                                    <input type="hidden" name="masterPort" value="@group.Master.Port" />
                                    <input type="hidden" name="slaveIps" value="@string.Join(",", group.Members.Select(m => m.IpAddress))" />
                                    <button type="submit" class="btn-dissolve" title="Gruppe auflösen"
                                            onclick="return confirm('Möchten Sie diese Gruppe wirklich auflösen?')">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <line x1="18" y1="6" x2="6" y2="18"/>
                                            <line x1="6" y1="6" x2="18" y2="18"/>
                                        </svg>
                                    </button>
                                </form>
                            }

                            @{
                                // Get other players/groups that this player can join
                                var otherPlayers = Model.PlayerGroups
                                    .Where(g => g.Id != group.Id && g.Master != null)
                                    .ToList();
                            }

                            @if (!isGroup && group.Master != null && otherPlayers.Any())
                            {
                                <div class="join-group-dropdown">
                                    <button type="button" class="btn-join" title="Zur Gruppe hinzufügen">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="3" y="3" width="7" height="7" rx="1"/>
                                            <rect x="14" y="3" width="7" height="7" rx="1"/>
                                            <rect x="3" y="14" width="7" height="7" rx="1"/>
                                            <path d="M17.5 14v7M14 17.5h7"/>
                                        </svg>
                                    </button>
                                    <div class="join-dropdown-menu">
                                        <div class="dropdown-header">Hinzufügen zu:</div>
                                        @foreach (var target in otherPlayers)
                                        {
                                            <form method="post" asp-page-handler="AddToGroup">
                                                <input type="hidden" name="masterIp" value="@target.Master!.IpAddress" />
                                                <input type="hidden" name="masterPort" value="@target.Master.Port" />
                                                <input type="hidden" name="slaveIp" value="@group.Master.IpAddress" />
                                                <button type="submit" class="dropdown-item">
                                                    <span class="dropdown-item-name">@target.Name</span>
                                                    <span class="dropdown-item-type">@target.DisplayType</span>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Player List -->
                        <div class="player-list">
                            @if (group.Master != null)
                            {
                                <!-- Master Player -->
                                <div class="player-item player-master">
                                    <div class="player-row">
                                        <div class="player-icon">
                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <rect x="6" y="4" width="12" height="16" rx="2"/>
                                                <circle cx="12" cy="14" r="3"/>
                                                <circle cx="12" cy="7" r="1"/>
                                            </svg>
                                        </div>
                                        <div class="player-info">
                                            <span class="player-name">
                                                @group.Master.Name
                                                @if (isGroup)
                                                {
                                                    <span class="master-label">Master</span>
                                                }
                                            </span>
                                            <span class="player-model">
                                                @group.Master.Brand @group.Master.ModelName
                                                @if (group.Master.IsStereoPaired && !string.IsNullOrEmpty(group.Master.ChannelMode))
                                                {
                                                    <span class="channel-indicator">@(group.Master.ChannelMode == "left" ? "L" : "R")</span>
                                                }
                                            </span>
                                        </div>
                                    </div>
                                    <div class="player-volume-row">
                                        @if (group.Master.IsFixedVolume)
                                        {
                                            <div class="fixed-volume">
                                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <rect x="3" y="11" width="5" height="8" rx="1"/>
                                                    <path d="M8 15l4-4v8l-4-4z"/>
                                                    <path d="M16 12a4 4 0 0 1 0 6"/>
                                                </svg>
                                                <span>Fixed Volume</span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="volume-controls" data-player-ip="@group.Master.IpAddress" data-player-port="@group.Master.Port" data-volume="@group.Master.Volume">
                                                <button type="button" class="btn-volume btn-volume-down" title="Leiser" onclick="adjustVolume(this, -5)">
                                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <line x1="5" y1="12" x2="19" y2="12"/>
                                                    </svg>
                                                </button>
                                                <div class="volume-bar">
                                                    <div class="volume-fill" style="width: @(Math.Max(0, Math.Min(100, group.Master.Volume)))%"></div>
                                                </div>
                                                <button type="button" class="btn-volume btn-volume-up" title="Lauter" onclick="adjustVolume(this, 5)">
                                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <line x1="12" y1="5" x2="12" y2="19"/>
                                                        <line x1="5" y1="12" x2="19" y2="12"/>
                                                    </svg>
                                                </button>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <!-- Slave Players -->
                                @foreach (var member in group.Members)
                                {
                                    var isMemberStereoPair = member.IsStereoPaired;
                                    <div class="player-item player-slave @(isMemberStereoPair ? "player-stereo" : "")">
                                        <div class="player-row">
                                            <form method="post" asp-page-handler="Ungroup" class="ungroup-form">
                                                <input type="hidden" name="masterIp" value="@group.Master.IpAddress" />
                                                <input type="hidden" name="masterPort" value="@group.Master.Port" />
                                                <input type="hidden" name="slaveIp" value="@member.IpAddress" />
                                                <button type="submit" class="btn-ungroup" title="Aus Gruppe entfernen"
                                                        onclick="return confirm('Player aus der Gruppe entfernen?')">
                                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <line x1="18" y1="6" x2="6" y2="18"/>
                                                        <line x1="6" y1="6" x2="18" y2="18"/>
                                                    </svg>
                                                </button>
                                            </form>
                                            <div class="player-icon @(isMemberStereoPair ? "icon-stereo" : "")">
                                                @if (isMemberStereoPair)
                                                {
                                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <rect x="4" y="6" width="6" height="12" rx="1"/>
                                                        <rect x="14" y="6" width="6" height="12" rx="1"/>
                                                    </svg>
                                                }
                                                else
                                                {
                                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <rect x="6" y="4" width="12" height="16" rx="2"/>
                                                        <circle cx="12" cy="14" r="3"/>
                                                        <circle cx="12" cy="7" r="1"/>
                                                    </svg>
                                                }
                                            </div>
                                            <div class="player-info">
                                                <span class="player-name">
                                                    @member.Name
                                                    @if (isMemberStereoPair)
                                                    {
                                                        <span class="stereo-label">Stereo</span>
                                                    }
                                                </span>
                                                <span class="player-model">
                                                    @if (isMemberStereoPair)
                                                    {
                                                        <span>Stereo Pair</span>
                                                    }
                                                    else
                                                    {
                                                        @member.Brand @member.ModelName
                                                    }
                                                    @if (member.IsStereoPaired && !string.IsNullOrEmpty(member.ChannelMode))
                                                    {
                                                        <span class="channel-indicator">@(member.ChannelMode == "left" ? "L" : "R")</span>
                                                    }
                                                </span>
                                            </div>
                                        </div>
                                        <div class="player-volume-row">
                                            @if (member.IsFixedVolume)
                                            {
                                                <div class="fixed-volume">
                                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <rect x="3" y="11" width="5" height="8" rx="1"/>
                                                        <path d="M8 15l4-4v8l-4-4z"/>
                                                        <path d="M16 12a4 4 0 0 1 0 6"/>
                                                    </svg>
                                                    <span>Fixed Volume</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="volume-controls" data-player-ip="@member.IpAddress" data-player-port="@member.Port" data-volume="@member.Volume">
                                                    <button type="button" class="btn-volume btn-volume-down" title="Leiser" onclick="adjustVolume(this, -5)">
                                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                            <line x1="5" y1="12" x2="19" y2="12"/>
                                                        </svg>
                                                    </button>
                                                    <div class="volume-bar">
                                                        <div class="volume-fill" style="width: @(Math.Max(0, Math.Min(100, member.Volume)))%"></div>
                                                    </div>
                                                    <button type="button" class="btn-volume btn-volume-up" title="Lauter" onclick="adjustVolume(this, 5)">
                                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                            <line x1="12" y1="5" x2="12" y2="19"/>
                                                            <line x1="5" y1="12" x2="19" y2="12"/>
                                                        </svg>
                                                    </button>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Now Playing Section -->
            <div id="now-playing" class="now-playing-section" style="display: none;">
                <div class="now-playing-header">
                    <h2>Wiedergabe</h2>
                    <span id="np-player-name" class="np-player-name"></span>
                </div>
                <div class="now-playing-content">
                    <div id="np-artwork" class="np-artwork">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <circle cx="12" cy="12" r="10"/>
                            <circle cx="12" cy="12" r="3"/>
                        </svg>
                    </div>
                    <div class="np-info">
                        <div id="np-title" class="np-title">Kein Titel</div>
                        <div id="np-artist" class="np-artist"></div>
                        <div id="np-album" class="np-album"></div>
                        <div id="np-progress" class="np-progress">
                            <div class="np-progress-bar">
                                <div id="np-progress-fill" class="np-progress-fill" style="width: 0%"></div>
                            </div>
                            <div class="np-time">
                                <span id="np-current-time">0:00</span>
                                <span id="np-total-time">0:00</span>
                            </div>
                        </div>
                        <div class="np-controls">
                            <button type="button" id="btn-prev" class="np-control-btn np-track-btn" title="Vorheriger Titel">
                                <svg viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M6 6h2v12H6zm3.5 6l8.5 6V6z"/>
                                </svg>
                            </button>
                            <button type="button" id="btn-play-pause" class="np-control-btn np-control-main" title="Wiedergabe/Pause">
                                <svg id="icon-play" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M8 5v14l11-7z"/>
                                </svg>
                                <svg id="icon-pause" viewBox="0 0 24 24" fill="currentColor" style="display: none;">
                                    <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
                                </svg>
                            </button>
                            <button type="button" id="btn-next" class="np-control-btn np-track-btn" title="Nächster Titel">
                                <svg viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M6 18l8.5-6L6 6v12zM16 6v12h2V6h-2z"/>
                                </svg>
                            </button>
                        </div>
                        <div id="np-service" class="np-service"></div>
                    </div>
                </div>
            </div>
        }
    </main>
</div>

<style>
    /* Loading Overlay */
    .loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(10, 10, 11, 0.85);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        display: none;
        align-items: center;
        justify-content: center;
        z-index: 9999;
        opacity: 0;
        transition: opacity 0.2s ease;
    }

    .loading-overlay.active {
        display: flex;
        opacity: 1;
    }

    .loading-spinner {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }

    .spinner-ring {
        position: absolute;
        border-radius: 50%;
        border: 2px solid transparent;
        animation: spin 1.2s linear infinite;
    }

    .spinner-ring:nth-child(1) {
        width: 50px;
        height: 50px;
        border-top-color: #22c55e;
        animation-duration: 1s;
    }

    .spinner-ring:nth-child(2) {
        width: 38px;
        height: 38px;
        border-right-color: #3b82f6;
        animation-duration: 1.5s;
        animation-direction: reverse;
    }

    .spinner-ring:nth-child(3) {
        width: 26px;
        height: 26px;
        border-bottom-color: #f4f4f5;
        animation-duration: 2s;
    }

    .loading-spinner {
        position: relative;
        width: 50px;
        height: 50px;
    }

    .loading-text {
        position: absolute;
        top: 70px;
        font-size: 0.85rem;
        color: var(--text-secondary);
        font-weight: 500;
        letter-spacing: 0.02em;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    /* CSS Variables */
    :root {
        --bg-primary: #0a0a0b;
        --bg-secondary: #111113;
        --bg-card: #161618;
        --bg-card-hover: #1c1c1f;
        --border-subtle: rgba(255, 255, 255, 0.06);
        --border-accent: rgba(255, 255, 255, 0.1);
        --text-primary: #f4f4f5;
        --text-secondary: #a1a1aa;
        --text-muted: #71717a;
        --accent-group: #22c55e;
        --accent-stereo: #3b82f6;
        --accent-single: #71717a;
        --danger: #ef4444;
        --danger-hover: #dc2626;
        --radius-sm: 6px;
        --radius-md: 10px;
        --radius-lg: 14px;
        --shadow-card: 0 2px 8px rgba(0, 0, 0, 0.3), 0 1px 2px rgba(0, 0, 0, 0.2);
        --transition: 0.15s ease;
    }

    /* Reset & Base */
    .bluesound-app {
        font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
        background: var(--bg-primary);
        min-height: 100vh;
        color: var(--text-primary);
        -webkit-font-smoothing: antialiased;
    }

    /* Header */
    .app-header {
        background: var(--bg-secondary);
        border-bottom: 1px solid var(--border-subtle);
        position: sticky;
        top: 0;
        z-index: 100;
        padding: 0 max(16px, env(safe-area-inset-left));
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 14px 0;
        max-width: 1200px;
        margin: 0 auto;
    }

    .brand {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .brand-icon {
        width: 28px;
        height: 28px;
        color: var(--text-primary);
    }

    .brand h1 {
        font-size: 1.25rem;
        font-weight: 600;
        letter-spacing: -0.02em;
        margin: 0;
    }

    .btn-refresh {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 8px 14px;
        background: var(--bg-card);
        border: 1px solid var(--border-accent);
        border-radius: var(--radius-md);
        color: var(--text-primary);
        font-size: 0.875rem;
        font-weight: 500;
        cursor: pointer;
        transition: all var(--transition);
    }

    .btn-refresh:hover {
        background: var(--bg-card-hover);
        border-color: rgba(255, 255, 255, 0.15);
    }

    .btn-refresh svg {
        width: 16px;
        height: 16px;
    }

    /* Alerts */
    .alert {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 16px;
        margin: 16px max(16px, env(safe-area-inset-left));
        border-radius: var(--radius-md);
        font-size: 0.875rem;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
    }

    .alert svg {
        width: 18px;
        height: 18px;
        flex-shrink: 0;
    }

    .alert-error {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.2);
        color: #fca5a5;
    }

    .alert-success {
        background: rgba(34, 197, 94, 0.1);
        border: 1px solid rgba(34, 197, 94, 0.2);
        color: #86efac;
    }

    /* Main Content */
    .main-content {
        padding: 20px max(16px, env(safe-area-inset-left));
        padding-bottom: max(20px, env(safe-area-inset-bottom));
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: var(--text-secondary);
    }

    .empty-state svg {
        width: 64px;
        height: 64px;
        margin-bottom: 16px;
        opacity: 0.4;
    }

    .empty-state h2 {
        font-size: 1.125rem;
        font-weight: 600;
        margin: 0 0 8px;
        color: var(--text-primary);
    }

    .empty-state p {
        font-size: 0.875rem;
        margin: 0;
        max-width: 300px;
        margin-inline: auto;
    }

    /* Stats */
