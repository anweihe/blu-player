<script>
    async function adjustVolume(button, delta) {
        const container = button.closest('.volume-controls');
        const playerIp = container.dataset.playerIp;
        const playerPort = container.dataset.playerPort;
        let currentVolume = parseInt(container.dataset.volume) || 0;

        // Calculate new volume
        let newVolume = Math.max(0, Math.min(100, currentVolume + delta));

        // Optimistic UI update
        container.dataset.volume = newVolume;
        const volumeFill = container.querySelector('.volume-fill');
        if (volumeFill) {
            volumeFill.style.width = newVolume + '%';
        }

        // Disable buttons temporarily
        const buttons = container.querySelectorAll('.btn-volume');
        buttons.forEach(btn => btn.disabled = true);

        try {
            const formData = new FormData();
            formData.append('playerIp', playerIp);
            formData.append('playerPort', playerPort);
            formData.append('volume', newVolume);

            const response = await fetch('?handler=Volume', {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: formData
            });

            if (response.ok) {
                const data = await response.json();
                // Update with actual volume from server
                container.dataset.volume = data.volume;
                if (volumeFill) {
                    volumeFill.style.width = data.volume + '%';
                }
            }
        } catch (error) {
            console.error('Volume adjustment failed:', error);
            // Revert on error
            container.dataset.volume = currentVolume;
            if (volumeFill) {
                volumeFill.style.width = currentVolume + '%';
            }
        } finally {
            buttons.forEach(btn => btn.disabled = false);
        }
    }

    // Loading overlay functions
    const loadingOverlay = document.getElementById('loading-overlay');

    function showLoading() {
        loadingOverlay.style.display = 'flex';
        // Trigger reflow for animation
        loadingOverlay.offsetHeight;
        loadingOverlay.classList.add('active');
    }

    function hideLoading() {
        loadingOverlay.classList.remove('active');
        setTimeout(() => {
            loadingOverlay.style.display = 'none';
        }, 200);
    }

    // Show loading on form submissions (except volume AJAX)
    document.addEventListener('DOMContentLoaded', function() {
        // Add loading to all forms except volume forms
        document.querySelectorAll('form').forEach(form => {
            // Skip forms that are handled via AJAX (volume controls are buttons, not forms now)
            if (!form.classList.contains('volume-form')) {
                form.addEventListener('submit', function() {
                    showLoading();
                });
            }
        });

        // Also show loading when clicking refresh button
        const refreshBtn = document.querySelector('.btn-refresh');
        if (refreshBtn) {
            refreshBtn.closest('form').addEventListener('submit', function() {
                showLoading();
            });
        }
    });

    // Hide loading when page is fully loaded (in case of back/forward navigation)
    window.addEventListener('pageshow', function(event) {
        if (event.persisted) {
            hideLoading();
        }
    });

    // Now Playing functionality
    let selectedPlayerIp = null;
    let selectedPlayerPort = null;
    let selectedPlayerName = null;
    let playbackRefreshInterval = null;

    function selectPlayer(cardElement) {
        // Don't select if clicking on a button or form
        if (event.target.closest('button') || event.target.closest('form') || event.target.closest('.join-dropdown-menu')) {
            return;
        }

        const ip = cardElement.dataset.playerIp;
        const port = cardElement.dataset.playerPort;
        const name = cardElement.dataset.playerName;

        if (!ip || !port) return;

        // Update selection
        document.querySelectorAll('.player-card').forEach(c => c.classList.remove('selected'));
        cardElement.classList.add('selected');

        selectedPlayerIp = ip;
        selectedPlayerPort = port;
        selectedPlayerName = name;

        // Show now playing section
        document.getElementById('now-playing').style.display = 'block';
        document.getElementById('np-player-name').textContent = name;

        // Fetch playback status
        fetchPlaybackStatus();

        // Start auto-refresh
        if (playbackRefreshInterval) {
            clearInterval(playbackRefreshInterval);
        }
        playbackRefreshInterval = setInterval(fetchPlaybackStatus, 2000);
    }

    async function fetchPlaybackStatus() {
        if (!selectedPlayerIp || !selectedPlayerPort) return;

        try {
            const response = await fetch(`?handler=PlaybackStatus&playerIp=${selectedPlayerIp}&playerPort=${selectedPlayerPort}`);
            const data = await response.json();

            if (data.success) {
                updateNowPlaying(data);
            }
        } catch (error) {
            console.error('Failed to fetch playback status:', error);
        }
    }

    function updateNowPlaying(data) {
        // Update title, artist, album
        document.getElementById('np-title').textContent = data.title || 'Kein Titel';
        document.getElementById('np-artist').textContent = data.artist || '';
        document.getElementById('np-album').textContent = data.album || '';

        // Update artwork
        const artworkContainer = document.getElementById('np-artwork');
        if (data.imageUrl) {
            artworkContainer.innerHTML = `<img src="${data.imageUrl}" alt="Album Art" onerror="this.parentElement.innerHTML='<svg viewBox=\\'0 0 24 24\\' fill=\\'none\\' stroke=\\'currentColor\\' stroke-width=\\'1.5\\'><circle cx=\\'12\\' cy=\\'12\\' r=\\'10\\'/><circle cx=\\'12\\' cy=\\'12\\' r=\\'3\\'/></svg>'">`;
        } else {
            artworkContainer.innerHTML = `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="10"/><circle cx="12" cy="12" r="3"/></svg>`;
        }

        // Update progress and track buttons (hide for radio/streams without duration)
        const progressSection = document.getElementById('np-progress');
        const trackButtons = document.querySelectorAll('.np-track-btn');
        const hasTrackInfo = data.totalSeconds && data.totalSeconds > 0;

        if (hasTrackInfo) {
            progressSection.style.display = 'block';
            trackButtons.forEach(btn => btn.style.display = 'flex');
            document.getElementById('np-progress-fill').style.width = `${data.progressPercent || 0}%`;
            document.getElementById('np-current-time').textContent = data.formattedPosition || '0:00';
            document.getElementById('np-total-time').textContent = data.formattedDuration || '0:00';
        } else {
            progressSection.style.display = 'none';
            trackButtons.forEach(btn => btn.style.display = 'none');
        }

        // Update play/pause button
        const iconPlay = document.getElementById('icon-play');
        const iconPause = document.getElementById('icon-pause');
        if (data.isPlaying) {
            iconPlay.style.display = 'none';
            iconPause.style.display = 'block';
        } else {
            iconPlay.style.display = 'block';
            iconPause.style.display = 'none';
        }

        // Update service
        document.getElementById('np-service').textContent = data.service || '';
    }

    async function controlPlayback(action) {
        if (!selectedPlayerIp || !selectedPlayerPort) return;

        try {
            const formData = new FormData();
            formData.append('playerIp', selectedPlayerIp);
            formData.append('playerPort', selectedPlayerPort);

            const response = await fetch(`?handler=${action}`, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: formData
            });

            if (response.ok) {
                // Fetch updated status after a short delay
                setTimeout(fetchPlaybackStatus, 200);
            }
        } catch (error) {
            console.error(`Playback control failed (${action}):`, error);
        }
    }

    // Set up playback control buttons
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('btn-play-pause')?.addEventListener('click', function() {
            const iconPlay = document.getElementById('icon-play');
            if (iconPlay.style.display !== 'none') {
                controlPlayback('Play');
            } else {
                controlPlayback('Pause');
            }
        });

        document.getElementById('btn-prev')?.addEventListener('click', function() {
            controlPlayback('PreviousTrack');
        });

        document.getElementById('btn-next')?.addEventListener('click', function() {
            controlPlayback('NextTrack');
        });
    });
</script>
